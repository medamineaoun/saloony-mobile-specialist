{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "📱 Flutter - Development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "development"
            ]
        },
        {
            "name": "🚀 Flutter - Production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "production",
                "--release"
            ]
        },
        {
            "name": "🧪 Flutter - Debug Mode",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug"
        },
        {
            "name": "⚡ Flutter - Profile Mode",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "🎯 Flutter - Release Mode",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "release"
        },
        {
            "name": "🌐 Flutter Web",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome"
            ]
        },
        {
            "name": "🐛 Flutter - Attach to Process",
            "request": "attach",
            "type": "dart"
        },
        {
            "name": "🧪 Flutter - Tests",
            "request": "launch",
            "type": "dart",
            "program": "test/",
            "args": [
                "--coverage"
            ]
        }
    ],
    "compounds": [
        {
            "name": "🎯 All Devices",
            "configurations": [
                "📱 Flutter - Development"
            ],
            "preLaunchTask": "flutter-clean-get"
        }
    ]
}